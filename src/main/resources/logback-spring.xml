<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Console appender with traceId, spanId, correlationId -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%highlight(%-5level)]
                [%X{traceId:-},%X{spanId:-},%X{correlationId:-}]
                [%thread] %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- JSON appender for centralized logging (ELK/Loki/Opensearch) -->
    <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <!-- uncomment if sending JSON to log collector -->
        <!-- <appender-ref ref="JSON"/> -->
    </root>

</configuration>